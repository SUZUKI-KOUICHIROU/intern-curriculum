<div class="container">
  <div class="col-md-5 offset-md-3">
  <h2 class="text-center font-weight-bold mt-5"><%= t("devise.passwords.edit.change_my_password") %></h2>

    
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field mt-5">
    <%= f.label :password,  t("devise.passwords.edit.new_password") %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %><%= t("devise.passwords.edit.characters_minimum") %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field mt-2">
    <%= f.label :password_confirmation, t("devise.passwords.edit.Confirm_new_password") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions text-center my-4">
    <%= f.submit t("devise.passwords.edit.change_my_password"), class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  </div>
</div>